<!DOCTYPE html>
<html lang="en">

<head>
    <title>User Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <div class="container mx-auto py-8">
        <h1 class="text-2xl font-bold mb-4">User Management</h1>
        <table class="w-full bg-white shadow rounded">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Avatar</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.email}}</td>
                    <td>
                        <img src="/{{this.avatar}}" alt="Avatar" class="w-12 h-12 rounded">
                    </td>
                    <td>
                        <form action="/users/change-password" method="POST">
                            <input type="hidden" name="userId" value="{{this.id}}">
                            <input type="password" name="newPassword" placeholder="New Password"
                                class="border rounded p-2">
                            <button type="submit"
                                class="bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600">Update</button>
                        </form>
                        <form action="/users/upload-avatar" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="userId" value="{{this.id}}">
                            <input type="file" name="avatar" class="border p-2 rounded">
                            <button type="submit"
                                class="bg-green-500 text-white px-2 py-1 rounded hover:bg-green-600">Upload
                                Avatar</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>

</html>